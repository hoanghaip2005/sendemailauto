# Email Automation Tool - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000
TIMEZONE=Asia/Ho_Chi_Minh

# Google Sheets Configuration
GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit
GOOGLE_API_KEY=your-google-api-key-here

# Google OAuth2 Credentials (for Gmail API)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# Gmail Configuration
GMAIL_USER_EMAIL=your-gmail-address@gmail.com
GOOGLE_REFRESH_TOKEN=your-refresh-token-here

# Alternative: Service Account Key File (for server-to-server authentication)
# GOOGLE_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account-key.json

# Cronjob Configuration
DEFAULT_INTERVAL_MINUTES=30
RUN_ON_START=false

# Logging Configuration
LOG_LEVEL=info
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5

# Email Settings
EMAIL_RATE_LIMIT_MS=1000
MAX_RETRY_ATTEMPTS=3
BATCH_SIZE=10

# Security Settings
ENABLE_CORS=true
CORS_ORIGIN=*

# Optional: Database Configuration (for future enhancement)
# DATABASE_URL=sqlite:./data/app.db

# Optional: Redis Configuration (for queue management)
# REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_EMAIL_TRACKING=true
ENABLE_RATE_LIMITING=true
ENABLE_RETRY_MECHANISM=true

# Monitoring and Alerts
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=60000

# Development Settings
ENABLE_DEV_LOGS=true
ENABLE_DEBUG=false