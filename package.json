{
  "name": "email-automation-tool",
  "version": "1.0.0",
  "description": "Automated email sending tool with Google Sheets integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:cloud": "node start-cloud.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "get-auth-url": "node scripts/get-auth-url.js",
    "save-token": "node scripts/save-token.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t email-automation .",
    "docker:run": "docker run -p 3000:3000 --env-file .env email-automation",
    "docker:compose": "docker-compose up -d",
    "logs": "tail -f logs/app.log",
    "pm2:install": "npm install -g pm2",
    "cloud:build": "gcloud builds submit --config cloudbuild.yaml",
    "cloud:deploy": "gcloud run deploy sendemail-service --source . --region europe-west10 --allow-unauthenticated",
    "scheduler:deploy": "powershell -ExecutionPolicy Bypass -File deploy-scheduler-simple.ps1",
    "scheduler:test": "gcloud scheduler jobs run sendemail-scheduler-2hours --location=europe-west1",
    "scheduler:list": "gcloud scheduler jobs list --location=europe-west1",
    "scheduler:pause": "gcloud scheduler jobs pause sendemail-scheduler-2hours --location=europe-west1",
    "scheduler:resume": "gcloud scheduler jobs resume sendemail-scheduler-2hours --location=europe-west1",
    "scheduler:delete": "gcloud scheduler jobs delete sendemail-scheduler-2hours --location=europe-west1 --quiet"
  },
  "keywords": [
    "email",
    "automation",
    "google-sheets",
    "gmail-api",
    "cloud-scheduler",
    "google-cloud"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "googleapis": "^128.0.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "fs-extra": "^11.1.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}